{
  "name": "nacl-blob",
  "description": "Encrypt browser blobs and files with tweetnacl-js-stream",
  "version": "1.0.0",
  "author": "Bret Comnes",
  "browserify": {
    "transform": [
      "workerify"
    ]
  },
  "bugs": {
    "url": "https://github.com/bcomnes/nacl-blob/issues"
  },
  "dependencies": {
    "nacl-stream": "^0.3.5",
    "nanobus": "^4.3.3",
    "workerify": "^1.1.0"
  },
  "devDependencies": {
    "budo": "^11.2.0",
    "cpx": "^1.5.0",
    "dependency-check": "^3.1.0",
    "global": "^4.3.2",
    "lodash.get": "^4.4.2",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "standard": "^11.0.1",
    "string-to-arraybuffer": "^1.0.0",
    "tape": "^4.9.0",
    "tape-run": "^4.0.0"
  },
  "homepage": "https://github.com/bcomnes/nacl-blob#readme",
  "keywords": [
    "browser",
    "crypto",
    "encryption",
    "nacl",
    "nacl-js",
    "tweetnacl"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcomnes/nacl-blob.git"
  },
  "scripts": {
    "build": "run-p build:*",
    "build:dist": "rimraf dist && mkdirp dist && browserify index.js --no-bundle-external -o dist/index.js",
    "build:site": "rimraf site && mkdirp site && cpx 'example-site/static/*' site && browserify example-site/index.js -o site/bundle.js",
    "prepublish": "run-s build:dist",
    "test": "run-s test:*",
    "test:browser": "browserify test.js | tape-run | tap-format-spec",
    "test:deps": "dependency-check package.json --missing --unused --entry index.js --no-dev --ignore-module workerify",
    "test:lint": "standard",
    "test-live": "budo test.js --live --open",
    "start": "budo example-site/index.js:bundle.js --dir example-site/static --live --open"
  }
}
